# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

# styles - set the folder for your theme definition file
set $theme $HOME/.config/sway/tools/themes/matcha-blue

# theme variables
include $theme/theme.conf

# user theme variable can override the global theme
include $HOME/.config/sway/user/definitions.d/theme.conf

# global variables
include $HOME/.config/sway/system/definitions

# user variables can override global definitions
include $HOME/.config/sway/user/definitions.d/*.conf

include $HOME/.config/sway/system/inputs/*

# enable modes
include $HOME/.config/sway/system/modes/*

# only enable this if every app you use is compatible with wayland
# xwayland disable

# include additional configs e.g. to autostart applications
include $HOME/.config/sway/system/config.d/*

# user config
include $HOME/.config/sway/user/config.d/*.conf
